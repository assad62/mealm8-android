        <item name="colorPrimary">@color/primary_400</item>
        <item name="colorOnPrimary">@color/primary_900</item>
        
        <!-- Background colors for dark mode -->
        <item name="android:colorBackground">@color/bg_primary_dark</item>
        
        <!-- Typography -->
        <item name="android:fontFamily">@font/plus_jakarta_sans</item>
        
        <!-- Status bar for dark mode -->
        <item name="android:statusBarColor">@color/bg_primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
